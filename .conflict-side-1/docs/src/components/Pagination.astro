---
import { ArrowLeftSolid, ArrowRightSolid } from "@repo/icons/solid"
import { Card, CardHeader, CardTitle, CardContent, CardDescription } from '@repo/ui/components/card'

const { dir, pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination;
const isRtl = dir === 'rtl';
---

<div class="pagination-links print:hidden" dir={dir}>

	{
		prev && (

	<Card asChild>
			<a href={prev.href} rel="prev">
    <CardHeader>
      <CardDescription>{prev.label}</CardDescription>
      <CardTitle className="flex flex-row items-center justify-start">
			{
				isRtl? <ArrowRightSolid className="h-4 pl-4"/> : <ArrowLeftSolid className="h-4 pr-4"/>
			}
				{Astro.locals.t('page.previousLink')}</CardTitle>
    </CardHeader>
	</a>
  </Card>
		)
	}

	{
		next && (

	<Card asChild>
			<a href={next.href} rel="next">
    <CardHeader>
      <CardDescription>{next.label}</CardDescription>
      <CardTitle className="flex flex-row items-center justify-end">
			{Astro.locals.t('page.nextLink')}
			{
				isRtl? <ArrowLeftSolid className="h-4 pr-4"/> : <ArrowRightSolid className="h-4 pl-4"/>
			}
</CardTitle>
</CardHeader>

	</a>
  </Card>
		)
	}

</div>

<style>
	.pagination-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(18rem, 100%), 1fr));
		gap: 1rem;
	}

	a {
		color: inherit;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		gap: 0.5rem;
		width: 100%;
		flex-basis: calc(50% - 0.5rem);
		flex-grow: 1;
		border-radius: 0.5rem;
		text-decoration: none;
		overflow-wrap: anywhere;
	}
	[rel='next'] {
		justify-content: end;
		text-align: end;
		flex-direction: row-reverse;
	}

	.link-title {
		color: var(--sl-color-white);
		font-size: var(--sl-text-2xl);
		line-height: var(--sl-line-height-headings);
	}

	svg {
		flex-shrink: 0;
	}
</style>
