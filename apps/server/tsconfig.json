{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "src"
  },
  "include": ["src"],
  "ts-node": {
    "swc": true
  }
}
